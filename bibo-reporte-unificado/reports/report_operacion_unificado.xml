<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_mrporder_inherit" inherit_id="mrp.report_mrporder">
            <xpath expr="//div[@t-if='o.workorder_ids']/table/tr[1]/td[2]" position="after">
                <td class="text-center"><strong>Fecha de inicio</strong></td>
                <td class="text-center"><strong>Fecha de finalización</strong></td>
            </xpath>
            <xpath expr="//div[@t-if='o.workorder_ids']/table/tr[1]" position="inside">
                <td class="text-center"><strong>Estado</strong></td>
            </xpath>
            <xpath expr="//div[@t-if='o.workorder_ids']/table/tr[2]/td[2]" position="after">
                <td><span t-esc="line2.date_start" /></td>
                <td><span t-esc="line2.date_finished" /></td>
            </xpath>
            <xpath expr="//div[@t-if='o.workorder_ids']/table/tr[2]" position="inside">
                <td><span t-esc="line2.state" /></td>
            </xpath>
        </template>
        <template id="report_operacion_unificado">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">
                    <div class="page">
                        <t t-set="contador" t-value="1" />
                        <t t-set="cantpro" t-value="0" />
                        <table class="table table-condensed">
                            <t t-foreach="docs" t-as="o">
                                <tr t-if="contador == 1">
                                    <th><strong>Fecha planificada:</strong></th>
                                    <th><strong>Orden de producción nº:</strong></th>
                                    <th><strong>Producto:</strong></th>
                                    <th><strong>Cantidad:</strong></th>
                                    <th><strong>Referencia de empresa:</strong></th>
                                    <th><strong>Número de PV:</strong></th>
                                </tr>
                                <tr>
                                    <td>
                                        <span t-field="o.date_planned_start"/><span t-if="o.date_planned_finished"> - <span t-field="o.date_planned_finished"/></span>
                                    </td>
                                    <td>
                                        <span t-field="o.name"/>
                                    </td>
                                    <td>
                                        <span t-field="o.product_id.code"/>
                                        <span t-field="o.product_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="o.product_qty"/>
                                        <t t-set="cantpro" t-value="cantpro + o.product_qty" />
                                        <span t-field="o.product_uom_id.name" groups="product.group_uom"/>
                                    </td>
                                    <td>
                                        <span t-esc="'sale_ref' in o and o.sale_ref"/>
                                    </td>
                                    <td>
                                        <span t-esc="'sale_name' in o and o.sale_name"/>
                                    </td>
                                </tr>
                                <t t-set="contador" t-value="contador + 1" />
                            </t>
                            <tr>
                                <td colspan="3" class="text-right"><strong>Total</strong></td>
                                <td><span t-esc="int(cantpro)"/><span> PZAS</span></td>
                            </tr>
                        </table><br/><br/>
                        <t t-set="contador" t-value="1" />
                        <table class="table table-condensed" style="page-break-before: always;">
                            <t t-foreach="docs" t-as="o">
                                <t t-if="contador == 1">
                                    <tr><td class="text-center" colspan="3"><h3>Órdenes de Trabajo</h3></td></tr>
                                    <tr><td colspan="3"><br/></td></tr>
                                    <tr>
                                        <td class="text-center"><strong>Nombre</strong></td>
                                        <td class="text-center"><strong>Centro de trabajo</strong></td>
                                        <td class="text-center"><strong>Fecha de inicio</strong></td>
                                        <td class="text-center"><strong>Fecha de finalización</strong></td>
                                        <td class="text-center"><strong>No. de minutos</strong></td>
                                        <td class="text-center"><strong>Estado</strong></td>
                                    </tr>
                                </t>
                                <tr t-foreach="o.workorder_ids" t-as="line2">
                                    <td class="text-center"><span t-field="line2.name"/></td>
                                    <td class="text-center"><span t-if="line2.workcenter_id" t-field="line2.workcenter_id.name"/></td>
                                    <td><span t-esc="line2.date_start" /></td>
                                    <td><span t-esc="line2.date_finished" /></td>
                                    <td class="text-center"><span t-field="line2.duration_expected"/></td>
                                    <td><span t-esc="line2.state" /></td>
                                </tr>
                                <t t-set="contador" t-value="contador + 1" />
                            </t>
                        </table><br/><br/>
                        <table class="table table-condensed">
                            <tr>
                                <h3 class="text-center" style="page-break-before: always;">Lista de Materiales</h3><br/>
                                <th><strong>Producto</strong></th>
                                <th class="text-right"><strong>Cantidad</strong></th>
                                <th class="text-center" groups="stock.group_stock_multi_locations">
                                    <strong>Origen</strong>
                                </th>
                                <th class="text-center" groups="stock.group_stock_multi_locations">
                                    <strong>Ubicación destino</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Código de barras</strong>
                                </th>
                            </tr>
                            <tr>
                                <td colspan="5"><strong>Productos a consumir</strong></td>
                            </tr>
                            <t t-set="li" t-value="[]" />
                            <t t-set="lii" t-value="[]" />
                            <t t-set="ltem" t-value="[]" />
                            <t t-set="cant" t-value="0" />
                            <t t-foreach="docs" t-as="o">
                                <t t-foreach="o.move_raw_ids" t-as="line">
                                    <t t-set="li" t-value="li + [(line.product_id.code,line.product_id.name,line.product_uom_qty,line.product_uom.name,line.location_id.name,line.location_dest_id.name,line.product_id.barcode)]" />
                                </t>
                            </t>
                            <t t-foreach="li" t-as="l">
                                <t t-if="not l[0] in ltem">
                                    <t t-set="cant" t-value="0" />
                                    <t t-foreach="li" t-as="liss">
                                        <t t-if="liss[0] == l[0]">
                                            <t t-set="cant" t-value="cant + liss[2]" />
                                        </t>
                                    </t>
                                    <t t-set="ltem" t-value="ltem + [(l[0])]" />
                                    <t t-set="lii" t-value="lii + [(l[0],l[1],cant,l[3],l[4],l[5],l[6])]" />
                                </t>
                            </t>
                            <tr t-foreach="lii" t-as="lline">
                                <td>
                                    <span t-esc="lline[0]"/>
                                    <span t-esc="lline[1]"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="lline[2]"/>
                                    <span t-esc="lline[3]"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="lline[4]"/>
                                </td>
                                <td class="text-center">
                                    <span t-esc="lline[5]"/>
                                </td>
                                <td class="text-center">
                                    <span t-if="lline[6]">
                                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', lline[6], 600, 100)" style="width:300px;height:50px"/>
                                    </span>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
